.page-header
  = link_to new_list_path, class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    = t('.new_list')
  %h1= t('.title')

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th= t('activerecord.attributes.list.name')
        %th.text-center{ colspan: 4}= t('shared.actions.title')
    %tbody
      - @lists.each do |list|
        %tr
          %td= list.name
          %td= link_to t('shared.actions.show'), list
          %td= link_to t('shared.actions.edit'), edit_list_path(list)
          %td= link_to t('shared.actions.delete'), list, data: { confirm: t('lists.shared.delete_confirm') }, method: :delete
